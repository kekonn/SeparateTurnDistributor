<ContentControl x:Class="ChessClock.UI.Views.GamesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessClock.UI"
        mc:Ignorable="d"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="146*"/>
            <RowDefinition Height="21*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="94*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="GamesList" Margin="10,10,10,0"/>
        <Button x:Name="ForceSyncButton" Content="Force Sync" Margin="10,5,10,17" Grid.Row="1" d:LayoutOverrides="HorizontalAlignment, VerticalAlignment"/>
        <TabControl Grid.Column="1" Margin="0,10,10,0">
            <TabItem Header="Game Details">
                <Grid />
            </TabItem>
            <TabItem Header="Local Save">
                <Grid />
            </TabItem>
            <TabItem Header="Remote Save">
                <Grid />
            </TabItem>
        </TabControl>
        <Button Content="New Game" Grid.Column="1" Margin="0,5,570,17" Grid.Row="1"/>

    </Grid>
</ContentControl>
